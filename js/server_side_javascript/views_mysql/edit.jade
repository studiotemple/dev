doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server side javascript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    article
      form(action='/topic/'+topic.id+'/edit' method='post')
        p
          input(type='title' name='title' placeholder='제목' value=topic.title)
        p
          textarea(name='description' placeholder='본문을 입력해보세용')
            =topic.description
        p
          input(type='title' name='author' placeholder='작성자명' value=topic.author)
        p
          input(type='submit')
