doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server side javascript
    ul
      each topic in topics
        li
          a(href='/topic/'+topic.id)= topic.title
    article
      form(action='/topic/add' method='post')
        p
          input(type='title' name='title' placeholder='제목')
        p
          textarea(name='description' placeholder='본문을 입력해보세용')
        p
          input(type='title' name='author' placeholder='작성자명')
        p
          input(type='submit')
